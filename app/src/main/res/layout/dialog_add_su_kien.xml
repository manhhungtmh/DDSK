<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dp"
    >
    <TextView
        android:id="@+id/txtTieuDeHocKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Sự kiện"
        android:textSize="22sp"
        android:textAlignment="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sự kiện"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/txtTenSuKien"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa điểm tổ chức sự kiện"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/txtDiaDiemToChuc"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời gian bắt đầu"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/txtThoiGianSuKien"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời gian kết thúc"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/txtThoiGianKetThuc"
        />

    <EditText
        android:id="@+id/txtMaSuKien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Mã sự kiện"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="Tạo sự kiện"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Hủy"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:id="@+id/btnCancel"
            />
        
    </LinearLayout>
</LinearLayout>